!!! 5
%html
  %head
    %title
      HomeAutomation
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'

    %meta(name="viewport" content="width=device-width, initial-scale=1")

  %body
    .layout
      .layout--head
        .navbar

          %a.layout--toggle.navbar--sidebar-toggle(href='#')
            = fa_icon 'bars'

      .layout--side
        .sidebar
          %ul
            %li
              = link_to "Things", things_path, class: 'sidebar--item', 'up-target' => '.layout--content'


      .layout--cover
      .layout--main
        .layout--content
          = yield
      .layout--dummy


